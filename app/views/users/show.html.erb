<main>
  <%= render "layouts/flash" %>

  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render "users/post", user: @user, book: @book %>

      <%= render "books/list", books: @books %>
　　　<tbody>
　　　  <% @books.each do |book| %>
					<tr>
　　　    <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
			    <td><%= book.body %></td>
        <% end %>			
    </div>
   </div>

</main>